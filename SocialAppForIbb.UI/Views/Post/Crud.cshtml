@model SocialAppForIbb.UI.Models.ViewModels.PostViewModel

<h2>@Model.PageTitle</h2>
@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <ul>
            @foreach (var modelStateValue in ViewData.ModelState.Values)
            {
                foreach (var error in modelStateValue.Errors)
                {
                    <li>@error.ErrorMessage</li>
                }
            }
        </ul>
    </div>
}


@using (Html.BeginForm("Create", "Post", FormMethod.Post))

{
    <div class="form-group">
        @Html.LabelFor(m => m.Title)
        @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Title)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Body)
        @Html.TextAreaFor(m => m.Body, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Body)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Status)
        @Html.TextBoxFor(m => m.Status, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Status)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.UserId)
        @Html.TextBoxFor(m => m.UserId, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.UserId)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.IsDeleted)
        @Html.CheckBoxFor(m => m.IsDeleted)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.DeletedAt)
        @Html.TextBoxFor(m => m.DeletedAt, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.DeletedAt)
    </div>

    

    <input type="submit" value="@Model.BtnText" class="btn @Model.BtnClass" />
}

